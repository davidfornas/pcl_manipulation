<launch>
  <rosparam command="load" file="$(find pcl_manipulation)/launch/arm5e_pc_grasp_planning.yaml" />
  
  <arg name="input_basename" default="amphoraJuly" />
  <arg name="rad" default="0.5" />
  <arg name="angle" default="3.94" /> 
  <arg name="along" default="0.0" /> 
  <arg name="alignedGrasp" default="false" />

  <param name="input_basename" value="$(find pcl_manipulation)/resources/$(arg input_basename)" />
  <param name="rad" value="$(arg rad)" />
  <param name="angle" value="$(arg angle)" />
  <param name="along" value="$(arg along)" />
  <param name="alignedGrasp" value="$(arg alignedGrasp)" />
  <param name="resources_data_path" value="$(find pcl_manipulation)/resources" />
  
  <node name="arm5_grasp_exec" pkg="pcl_manipulation" type="arm5_grasp_exec" output="screen" respawn="false"/>
  <node pkg="tf" type="static_transform_publisher" name="stereo_to_kin" args="0 0 0 0 0 0 stereo kinematic_base 100" />
  <node name="arm5e_pc_grasp_planning" pkg="pcl_manipulation" type="arm5e_pc_grasp_planning" output="screen" respawn="false"/>
</launch>


